<section class="listblock">
	<div class="container-fluid">
		<div class="container-xxl">
			<div class="row heading">
				<h2>
					{{ fields.title }}
				</h2>
				<p>
					{{ fields.subtitle }}
				</p>
			</div>
			<div class="row items">
				{% for item in items %}
					<div class="col-6 col-md-4 mb-4">
						<a href="{{ item.link }}">
							<img src="{{ item.image }}" srcset="{{ item.srcset }}" sizes="{{ item.sizes }}" alt="{{ item.alt }}" class="img-fluid">
							<h3>{{ item.title }}</h3>
							<p>{{ item.subtitle }}</p>
						</a>
						<a href="{{ item.link }}" class="shopnow">
							{{ fields.button_text }}
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>
