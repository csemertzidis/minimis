<section class="categories">
	<div class="container-fluid">
		<div class="container-xxl">
			<div class="row">
				<div class="col-12">
					<h2>{{ fields.title }}</h2>
					<p class="lead">{{ fields.subtitle }}</p>
				</div>
			</div>

			<div class="row">
				{% for item in items %}
					<div class="col-6 col-md-3 mb-3">
						<a href="{{ item.link }}">
							<div class="categoryImage">
								<img src="{{ item.image }}" srcset="{{ item.srcset }}" alt="{{ item.alt }}" class="img-fluid">
							</div>
							<h3>
								{{ item.name }}
							</h3>
							<p>
								{{ item.description }}
							</p>
						</a>
					</div>
				{% endfor %}
			</div>

			<div class="row">
				<div class="col-12 showall">
					<a href="/shop">Show All Products!</a>
				</div>
			</div>

		</div>
	</div>
</section>
