<section class="productcarouselsection">
	<h2>{{ fields.title }}</h2>
	<p class="carousel-lead">{{ fields.subtitle }}</p>
	<div class="container-fluid">
		<div class="container-xxl">
			<div class="swiper swipercar productcarousel">
				<div class="swiper-wrapper">
					{% for item in items %}
						<div class="swiper-slide">
							<div class="card border-0 m-2">
								{% if item.link %}
									<a href="{{ item.link }}" class="stretched-link"></a>
								{% endif %}
								<img class="card-img-top-car" src="{{ item.image }}" sizes="100vw" alt="{{ item.alt }}">
								<div class="card-body">
									<div class="row">
										<div class="col-6">
											<h3 class="card-title">{{ item.name }}</h3>
										</div>
										<div class="col-6 text-end">
											<p class="card-price">{{ item.price_html }}</p>
										</div>
									</div>
									<div class="row">
										<div class="col-12 ">
											{% for c in item.categories %}
												
													{{ c }}
											
											{% endfor %}
										</div>
									</div>
									
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
				<div class="swiper-button-next"></div>
				<div class="swiper-button-prev"></div>
			</div>
		</div>
	</div>
</section>
