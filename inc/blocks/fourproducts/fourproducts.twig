<section class="fourproducts">
    <div class="container-fluid">
        <div class="container-xxl">
            <div class="row">
                <div class="col-12 col-md-3 title">
                    <h2>
                        {{ fields.title }}
                    </h2>
                </div>
                <div class="col-12 col-md-9 text-center">
                    <div class="row">
                        {% for i in products %}
                            <div class="col-6 p-5 d-flex align-items-center justify-content-center">
                                <a href="{{ i.permalink }}" class="text-center">
                                    <img
                                        src="{{ i.image }}"
                                        alt="{{ i.name }}"
                                        class="img-fluid square"
                                    />
                                </a> 
                            </div>
                        {% endfor %}
                    </div>
                </div>  
            </div>
            {% if fields.link %}
                <div class="row">
                    <div class="col-12 text-end link">
                        <a href="{{ fields.link.url }}" target="{{ fields.link.target }}" class="link">
                            {{ fields.link.title }}
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</section>